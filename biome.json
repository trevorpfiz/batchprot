{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/.sst/**",
      "!**/.turbo/**",
      "!**/.venv/**",
      "!**/packages/design-system/components/ui/**",
      "!**/packages/design-system/lib/**",
      "!**/packages/design-system/hooks/**",
      "!**/apps/email/.react-email/**"
    ],
    "experimentalScannerIgnores": [
      "node_modules",
      "dist",
      ".sst",
      ".next",
      ".turbo",
      ".venv"
    ]
  }
}
