{
  "name": "batchprot",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.11.0"
  },
  "type": "module",
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "scripts": {
    "analyze": "turbo analyze",
    "boundaries": "turbo boundaries",
    "build": "turbo build",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo -F @repo/database dk:generate",
    "db:migrate": "turbo -F @repo/database migrate",
    "db:pull": "turbo -F @repo/database pull",
    "db:push": "turbo -F @repo/database push",
    "db:studio": "turbo -F @repo/database studio",
    "deploy": "sst deploy --stage production",
    "dev": "sst dev",
    "format": "ultracite format",
    "lint": "ultracite lint",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "start:db": "./start-database.sh",
    "test": "turbo test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@clack/prompts": "^0.11.0",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "@types/aws-lambda": "8.10.150",
    "@types/node": "^24.0.10",
    "commander": "^14.0.0",
    "husky": "^9.1.7",
    "sst": "3.17.10",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "ultracite": "^5.0.32",
    "vitest": "^3.2.4"
  }
}
